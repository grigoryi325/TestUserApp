@model TestUserApp.Models.Employee

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
</head>
<body>
    <div style="width:600px; padding: 2%;"> 
        <form method="post" action="/Home/Create">
            <div class="form-group">
                <label for="Name">Ім'я</label>
                <input class="form-control type="text" required="" name="Name" />
            </div>
            <div class="form-group">
                <label for="Position">Позиція</label>
                <input class="form-control type="text" required="" name="Position" />
            </div>
            <div class="form-group">
                <label for="Date">Дата народження</label>
                <input class="form-control" type="date" required="" name="Date" />
            </div>

                 <input class="btn btn-primary" type="submit" value="Сохранить" />
</form>
    </div>
    <p style="margin-left:2%;"><a href="~/Home/Index/">Назад</a></p>
</body>
</html>
